@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model  List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı:@ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        @*<th>Personel ID</th>*@
        <th>Personel </th>
        <th>Satışlar </th>
        
        @*<th>Görsel</th>*@
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        @*<td>@x.Personelid</td>*@
        <td>@x.PersonelAd @x.PersonelSoyad</td>
        @*<td>@x.PersonelSoyad</td>*@
        @*<td>@x.PersonelGorsel</td>*@
        <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-default" style="background-color:tomato">Satışlar</a></td>
    </tr>
    }
</table>